              <span class="ml-2 text-sm tracking-wide truncate">Profile</span>
            </a>
          </li>

        </ul>
        <p class="mb-14 px-5 py-3 hidden md:block text-center text-xs">Copyright @2023</p>
      </div>
    </div>


<!-- component -->
<div class="h-full ml-13 mt-14 mb-10 md:ml-64">

<section class="max-w-4xl p-6 mx-auto bg-indigo-600 rounded-md shadow-md mt-20">
  <h1 class="text-xl font-bold text-white capitalize ">Edit User Details</h1>


  <form action="/admin/updateUser" method="post" enctype="multipart/form-data" name="editUser" onsubmit="return validateUserEditForm()">
    <input type = "hidden" id="userid" name="userid" value="#{UserDetails._id}">
    <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">

      <div>
        <label class="text-white" for="name">Fullname</label>
        <input  type="text" id="name" name="name" value="#{UserDetails.fullname}" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md ">
        <p class="text-xs italic text-red-500 error" id="nameErr"> </p>

      </div>

      <div>
        <label class="text-white" for="email">Email Address</label>
        <input id="emailAddress" name="email"  type="email" value="#{UserDetails.email}" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md ">
        <p class="text-xs italic text-red-500 error" id="emailErr">  </p>

      </div>
      <div>
        <label class="text-white" for="number">Number</label>
        <input id="number" type="number" name="number" value="#{UserDetails.number}" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md ">
        <p class="text-xs italic text-red-500 error" id="numberErr">  </p>

      </div>

      <input type="hidden" name="oldImage" value="#{UserDetails.photo}" />
      <div>
        <label for="image" class="block mb-2 text-sm font-medium text-gray-900 ">Image:</label>
        <input type="file" name="image" id="image" class="block w-full mb-5 text-xs text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 " >
      </div>


</div>

    <div class="flex justify-end mt-6 gap-2">
      <button type="button" data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-green-500 rounded-md hover:bg-green-700 focus:outline-none focus:bg-gray-600">Change user Password</button>
      <button type="submit" class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-pink-500 rounded-md hover:bg-pink-700 focus:outline-none focus:bg-gray-600">Save</button>
    </div>
</form>
</section>
<div id="authentication-modal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full">
<div class="relative w-full h-full max-w-2xl md:h-auto">

  <form action="/admin/changeUserPassword" method="post" class="relative bg-white rounded-lg shadow"  name="updatePasswordForm" onsubmit="return validateChangePasswordForm()">

    <div class="flex items-start justify-between p-4 border-b rounded-t ">
      <h3 class="text-xl font-semibold text-gray-900 "> change password
      </h3>
      <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center " data-modal-hide="authentication-modal">
        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>  
      </button>
    </div>

    <div class="p-6 space-y-6">
      <div class="grid grid-cols-6 gap-6">
        <div class="col-span-6 sm:col-span-3">
          <label for="passwordEmail" class="block mb-2 text-sm font-medium text-gray-900 ">Email:</label>
          <input type="email" name="passwordEmail" id="passwordEmail" value="#{UserDetails.email}" readonly class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5 "  >
        </div>
          <div class="col-span-6 sm:col-span-3">
            <label for="password" class="block mb-2 text-sm font-medium text-gray-900 ">Password:</label>
            <input type="password" name="password" id="password"  autocomplete="off "class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5 "  placeholder="*********" >
            <p class="text-xs italic text-red-500 error" id="passwordErr">  </p>

            <input type="hidden" name="UserID" id="UserID"  value="#{UserDetails._id}">
        </div>
        <div class="col-span-6 sm:col-span-3">
          <label for="confirmPassword" class="block mb-2 text-sm font-medium text-gray-900 ">Confirm password</label>
          <input type="password" name="confirmPassword" id="confirmPassword"   autocomplete="off" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5 " placeholder="********" >
          <p class="text-xs italic text-red-500 error" id="confirmPasswordErr">  </p>

        </div>


</div>

  <div class=" items-center p-6 space-x-2 border-t border-gray-200 rounded-b ">
<button type="submit" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center ">Update</button>
  </div>
    </div>
</div>
</div>



</div>
